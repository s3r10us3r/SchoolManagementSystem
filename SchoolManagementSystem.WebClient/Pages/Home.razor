@page "/{Registered:bool?}"
@inject IUserWebService UserWebService
@inject NavigationManager NavigationManager
@inject BearerLoginService BearerLoginService

<PageTitle>School Management System</PageTitle>

<div class="d-flex flex-column align-items-center justify-content-center">
    <div class="card">
        <div class="card-body">
            <h2 class="text-center">Login</h2>
            <EditForm Model="Model" OnSubmit="Submit">
                <div class="d-flex align-items-center justify-content-center flex-column px-4 rounded">
                    <div class="form-group m-2">
                        <label for="loginInput">Login:</label>
                        <InputText class="form-control" id="loginInput" placeholder="Enter login" @bind-Value="Model.Login"/>
                    </div>
                    <div class="form-group m-2">
                        <label for="passwordInput">Passsword:</label>
                        <InputText type="password" class="form-control" id="passwordInput" placeholder="Enter password" @bind-Value="Model.Password"/>
                    </div>
                    <a class="link-opacity-75 link-opacity-100-hover" href="/register">Register with registration code</a>
                    <button class="btn btn-dark m-2">Log in</button>
                    @if(Registered)
                    {
                        <p style="color: lawngreen">
                            You have registered successfuly, you can log in now.
                        </p>
                    }
                </div>
            </EditForm>
        </div>
    </div>
</div>
@code {
    private LoginDto Model { get; set; } = new LoginDto();
    [Parameter] public bool Registered { get; set; }

    protected override void OnInitialized()
    {
        Model = new LoginDto();
    }

    private async Task Submit()
    {
        var result = await UserWebService.Login(Model);
        if (result.IsSuccess)
        {
            BearerLoginService.SetLoginHeader(result.Data!.Token);
            NavigationManager.NavigateTo("/dashboard");
        }
    }
}
