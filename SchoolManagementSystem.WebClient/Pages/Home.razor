@page "/"
@inject NavigationManager NavigationManager
@inject BearerLoginService BearerLoginService

<PageTitle>Home - School Management System</PageTitle>

<div class="d-flex flex-column align-items-center justify-content-center text-center">
    <h1>Welcome to the School Management System</h1>
    <p>Manage lessons, assignments, and grades efficiently.</p>

    @if (BearerLoginService.IsAuthenticated)
    {
        <p>You are logged in as a @BearerLoginService.UserRole.</p>
        <button class="btn btn-dark m-3" @onclick="GoToDashboard">Go to Dashboard</button>
    }
    else
    {
        <button class="btn btn-primary m-3" @onclick="GoToLogin">Login</button>
    }
</div>

@code {
    private void GoToLogin() => NavigationManager.NavigateTo("/login");
    private void GoToDashboard() => NavigationManager.NavigateTo("/dashboard");
}
